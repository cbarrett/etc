let s:<%- scheme %>_termcolors = get(g:, '<%- scheme %>_termcolors', 256)
if s:<%- scheme %>_termcolors != 256 && &t_Co >= 16
  let s:cuiindex = 0
elseif s:<%- scheme %>_termcolors == 256
  let s:cuiindex = 1
else
  let s:cuiindex = 2
endif

let s:base03 = [ '#<%- base["00"]["hex"] %>', s:cuicolors.base03[s:cuiindex] ]
